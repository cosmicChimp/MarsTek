@model IEnumerable<MarsTek.Models.Service>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Services</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Service" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Service
            </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Service
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Info
                    </th>
                    <th>
                        Edit or Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width50%>
                            <img width="150" height="100" src=@obj.PicUrl /> @obj.Name
                        </td>
                        <td width30%>
                            @obj.Kind
                        </td>
                        <td width40%>
                            @obj.InfoBody
                        </td>
                        <td width30% class="Text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Service" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="far fa-edit"></i> Edit
                                </a>
                                <a asp-controller="Service" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Service exists</p>
    }
</div>

